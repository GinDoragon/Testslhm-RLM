<Page x:Class="Triangle.PageResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Triangle"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageResult">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="lbResult"  Content="#Result" FontFamily="Comic Sans MS" HorizontalAlignment="Center" Grid.Row="1" FontSize="28" Grid.ColumnSpan="3"/>
        <Button Content="Начать снова" Background="#fff494" FontFamily="Comic Sans MS" FontSize="20" Name="btnTryAgain" Grid.Column="1" Grid.Row="3" Height="45" Click="btnTryAgain_Click"/>
    </Grid>
</Page>
